        "@typescript-eslint/parser": "^4.17.0",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^8.0.0",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^5.1.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "prettier-eslint": "^12.0.0",
        "ts-loader": "^8.0.17",
