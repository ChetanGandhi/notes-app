{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noUnusedLocals": false,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "typeRoots": ["node_modules/@types"],
        "moduleResolution": "node",
        "outDir": "../dist/notes-angular",
        "sourceMap": true,
        "lib": ["dom", "ES2020"],
        "module": "ES2020",
        "target": "ES2020"
    },
    "exclude": ["./node_modules"],
    "include": ["./**/*.d.ts", "./**/*.ts"]
}
